generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Obra {
  id         Int      @id @default(autoincrement())
  titulo     String
  precio     Int      // precio en centavos (ej: 450000 = USD 4,500)
  imagenUrl  String   @map("imagen_url")
  status     String   @default("disponible") // "disponible" | "vendido"
  artistSlug String   @map("artist_slug")
  artistName String   @map("artist_name")
  year       String?
  medium     String?
  dimensions String?
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("obras")
}
